{
  "name": "true-wallet",
  "version": "1.0.0",
  "description": "Smart Wallet based on ERC-4337",
  "main": "index.js",
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "scripts": {
    "build": "forge build --sizes",
    "compile": "forge compile",
    "test": "forge test --match-contract UnitTest -vvv",
    "gas-report": "forge test --match-contract UnitTest --gas-report",
    "test:fork": "source .env && forge test --match-contract EndToEndTest --rpc-url $MUMBAI_RPC_URL -vvv",
    "fork:gas-report": "source .env && forge test --match-contract EntToEndTest --rpc-url $MUMBAI_RPC_URL -vvv --gas-report",
    "deployEntryPoint:goerli": "source .env && forge script script/DeployEntryPoint.s.sol:DeployEntryPointScript --rpc-url $GOERLI_RPC_URL --broadcast --etherscan-api-key $ETHERSCAN_API_KEY --verify -vvvv",
    "deployWalletImpl:goerli": "source .env && forge script script/DeployWallet.s.sol:DeployWalletScript --rpc-url $GOERLI_RPC_URL --broadcast --etherscan-api-key $ETHERSCAN_API_KEY --verify -vvvv",
    "deployWallet:goerli": "source .env && forge script script/DeployWalletProxy.s.sol:DeployWalletProxyScript --rpc-url $GOERLI_RPC_URL --broadcast --etherscan-api-key $ETHERSCAN_API_KEY --verify -vvvv",
    "deployFactory:goerli": "source .env && forge script script/DeployWalletFactory.s.sol:DeployWalletFactoryScript --rpc-url $GOERLI_RPC_URL --broadcast --etherscan-api-key $ETHERSCAN_API_KEY --verify --gas-limit $GAS_LIMIT -vvvv",
    "deployPaymaster:goerli": "source .env && forge script script/DeployPaymaster.s.sol:DeployPaymasterScript --rpc-url $GOERLI_RPC_URL --broadcast --etherscan-api-key $ETHERSCAN_API_KEY --verify --gas-limit $GAS_LIMIT -vvvv",
    "deployEntryPoint:mumbai": "source .env && forge script script/DeployEntryPoint.s.sol:DeployEntryPointScript --rpc-url $MUMBAI_RPC_URL --broadcast --etherscan-api-key $POLYGONSCAN_API_KEY --verify -vvvv",
    "deployWalletImpl:mumbai": "source .env && forge script script/DeployWallet.s.sol:DeployWalletScript --rpc-url $MUMBAI_RPC_URL --broadcast --etherscan-api-key $POLYGONSCAN_API_KEY --gas-limit $GAS_LIMIT --gas-price 40000000000 --verify -vvvv",
    "deployWalletProxy:mumbai": "source .env && forge script script/DeployWalletProxy.s.sol:DeployWalletProxyScript --rpc-url $MUMBAI_RPC_URL --broadcast --etherscan-api-key $POLYGONSCAN_API_KEY --gas-limit $GAS_LIMIT --gas-price 40000000000 --verify -vvvv",
    "deployFactory:mumbai": "source .env && forge script script/DeployWalletFactory.s.sol:DeployWalletFactoryScript --rpc-url $MUMBAI_RPC_URL --broadcast --etherscan-api-key $POLYGONSCAN_API_KEY --gas-limit $GAS_LIMIT --gas-price 40000000000 --verify -vvvv",
    "deployPaymaster:mumbai": "source .env && forge script script/DeployPaymaster.s.sol:DeployPaymasterScript --rpc-url $MUMBAI_RPC_URL --broadcast --etherscan-api-key $POLYGONSCAN_API_KEY --gas-limit $GAS_LIMIT --gas-price 40000000000 --verify -vvvv",
    "deployContractManagerAndSecurityModule:mumbai": "source .env && forge script script/DeployContractManagerAndSecurityModule.s.sol:DeployContractManagerAndSecurityModule --rpc-url $MUMBAI_RPC_URL --broadcast --etherscan-api-key $POLYGONSCAN_API_KEY --verify -vvvv",
    "deploySocialRecoveryModule:mumbai": "source .env && forge script script/DeploySocialRecoveryModule.s.sol:DeploySocialRecoveryModuleScript --rpc-url $MUMBAI_RPC_URL --broadcast --etherscan-api-key $POLYGONSCAN_API_KEY --verify -vvvv",
    "deployFull:local": "source .env && forge script script/DeployFull.s.sol:DeployFullScript --rpc-url http://127.0.0.1:8545 --broadcast"
  },
  "keywords": [],
  "author": "VitalR",
  "license": "GPL-3.0",
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.2.2",
    "@nomiclabs/hardhat-etherscan": "^3.1.5",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@typechain/ethers-v5": "^10.0.0",
    "@typechain/hardhat": "^6.0.0",
    "@types/chai": "^4.3.4",
    "@types/mocha": "^9.1.1",
    "@types/node": "^17.0.45",
    "chai": "^4.3.7",
    "ethereum-waffle": "^3.4.4",
    "ethers": "^5.7.2",
    "hardhat": "^2.12.6",
    "hardhat-preprocessor": "^0.1.4",
    "ts-node": "^10.9.1",
    "typechain": "^8.0.0",
    "typescript": "^4.6.4"
  }
}