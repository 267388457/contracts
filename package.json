{
  "name": "true-wallet",
  "version": "1.0.0",
  "description": "Smart Wallet based on ERC-4337",
  "main": "index.js",
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "scripts": {
    "build": "forge build --sizes",
    "compile": "forge compile",
    "test": "forge test --match-contract UnitTest -vvv",
    "gas-report": "forge test --match-contract UnitTest --gas-report",
    "test:fork": "source .env && forge test --match-contract EndToEndTest --rpc-url $MUMBAI_RPC_URL -vvv",
    "fork:gas-report": "source .env && forge test --match-contract EntToEndTest --rpc-url $MUMBAI_RPC_URL -vvv --gas-report",
    "deploy:entrypoint:mumbai": "source .env && forge script script/DeployEntryPoint.s.sol:DeployEntryPointScript --rpc-url $MUMBAI_RPC_URL --broadcast --etherscan-api-key $POLYGONSCAN_API_KEY --verify -vvvv",
    "deployfactory:mumbai": "source .env && forge script script/03_DeployWalletFactory.s.sol:DeployWalletFactoryScript --rpc-url $MUMBAI_RPC_URL --broadcast --etherscan-api-key $POLYGONSCAN_API_KEY --gas-limit $GAS_LIMIT --gas-price 40000000000 --verify -vvvv",
    "deploypaymaster:mumbai": "source .env && forge script script/DeployPaymaster.s.sol:DeployPaymasterScript --rpc-url $MUMBAI_RPC_URL --broadcast --etherscan-api-key $POLYGONSCAN_API_KEY --gas-limit $GAS_LIMIT --gas-price 40000000000 --verify -vvvv",
    "deploy:manager:modules:mumbai": "source .env && forge script script/04_DeployManagerAndModules.s.sol:DeployManagerAndModules --rpc-url $MUMBAI_RPC_URL --broadcast --etherscan-api-key $POLYGONSCAN_API_KEY --verify -vvvv",
    "deploy:local": "source .env && forge script script/DeployLocal.s.sol:DeployLocalScript --rpc-url http://127.0.0.1:8545 --broadcast",
    "deploy:mumbai:walletimpl": "source .env && forge script script/01_DeployWallet.s.sol:DeployWalletScript --rpc-url $MUMBAI_RPC_URL --broadcast --etherscan-api-key $POLYGONSCAN_API_KEY --gas-limit $GAS_LIMIT --gas-price 40000000000 --verify -vvvv",
    "deploy:mumbai:deployer": "source .env && forge script script/deployer/02_DeployDeployer.s.sol:DeployDeployerScript --rpc-url $MUMBAI_RPC_URL --broadcast --etherscan-api-key $POLYGONSCAN_API_KEY --verify -vvvv",
    "deploy:mumbai:factory": "source .env && forge script script/deployer/ExecuteDeployer.s.sol:ExecuteDeployerScript --rpc-url $MUMBAI_RPC_URL --broadcast --etherscan-api-key $POLYGONSCAN_API_KEY --gas-limit $GAS_LIMIT --gas-price 40000000000 --verify -vvvv",
    "deploy:mumbai:all": "source .env && forge script script/deployer/ExecuteDeployer.s.sol:ExecuteDeployerScript --rpc-url $MUMBAI_RPC_URL --broadcast --etherscan-api-key $POLYGONSCAN_API_KEY --gas-limit $GAS_LIMIT --gas-price 40000000000 --verify -vvvv",
    "createwallet:mumbai": "source .env && forge script script/CreateWalletProxy.s.sol:CreateWalletProxyScript --rpc-url $MUMBAI_RPC_URL --broadcast --etherscan-api-key $POLYGONSCAN_API_KEY --gas-limit $GAS_LIMIT --gas-price 40000000000 --verify -vvvv",
    "deploy:sepolia:walletimpl": "source .env && forge script script/01_DeployWallet.s.sol:DeployWalletScript --rpc-url $SEPOLIA_RPC_URL --broadcast --etherscan-api-key $ETHERSCAN_API_KEY --gas-limit $GAS_LIMIT --gas-price 40000000000 --verify -vvvv",
    "deploy:sepolia:deployer": "source .env && forge script script/deployer/02_DeployDeployer.s.sol:DeployDeployerScript --rpc-url $SEPOLIA_RPC_URL --broadcast --etherscan-api-key $ETHERSCAN_API_KEY --verify -vvvv",
    "deploy:sepolia:factory": "source .env && forge script script/deployer/ExecuteDeployer.s.sol:ExecuteDeployerScript --rpc-url $SEPOLIA_RPC_URL --broadcast --etherscan-api-key $ETHERSCAN_API_KEY --gas-limit $GAS_LIMIT --gas-price 40000000000 --verify -vvvv",
    "deploy:sepolia:all": "source .env && forge script script/deployer/ExecuteDeployer.s.sol:ExecuteDeployerScript --rpc-url $SEPOLIA_RPC_URL --broadcast --etherscan-api-key $ETHERSCAN_API_KEY --gas-limit $GAS_LIMIT --gas-price 40000000000 --verify -vvvv",
    "createwallet:sepolia": "source .env && forge script script/CreateWalletProxy.s.sol:CreateWalletProxyScript --rpc-url $SEPOLIA_RPC_URL --broadcast --etherscan-api-key $ETHERSCAN_API_KEY --gas-limit $GAS_LIMIT --gas-price 40000000000 --verify -vvvv"
  },
  "keywords": [],
  "author": "TrueWallet Team",
  "license": "GPL-3.0",
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.2.2",
    "@nomiclabs/hardhat-etherscan": "^3.1.5",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@typechain/ethers-v5": "^10.0.0",
    "@typechain/hardhat": "^6.0.0",
    "@types/chai": "^4.3.4",
    "@types/mocha": "^9.1.1",
    "@types/node": "^17.0.45",
    "chai": "^4.3.7",
    "ethereum-waffle": "^3.4.4",
    "ethers": "^5.7.2",
    "hardhat": "^2.12.6",
    "hardhat-preprocessor": "^0.1.4",
    "ts-node": "^10.9.1",
    "typechain": "^8.0.0",
    "typescript": "^4.6.4"
  }
}
